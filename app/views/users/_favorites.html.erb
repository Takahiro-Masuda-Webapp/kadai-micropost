<% if approvings.any? %>
  <ul class="list-unstyled">
    <% approvings.each do |approving| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(approving.user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
            <%= approving.user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(approving.user) %></p>
            <p><%= approving.content %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate approvings %>
<% end %>